# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index()
GET     /index                           	controllers.Application.index()
GET     /tokenexchange                  	controllers.Application.tokenExchange(code)
GET     /login								controllers.Application.login()
GET     /logout								controllers.Application.logout()
#GET     /dashboard							controllers.Application.dashboard()

#JSONs
GET     /getactivities						controllers.Application.getActivities()
GET     /dosync								controllers.Application.getActivitiesSynced()
GET		/getathletestat						controllers.Application.getAthleteStatistics()
GET		/getathletestat/:id					controllers.Application.getAthleteStatisticsById(id)
GET		/isdatasynced						controllers.Application.isDataSynced()
GET		/getfriends							controllers.Application.getFriends()

#Backgroud actions
GET     /syncwithstrava						controllers.Application.getActivitiesSynced()
GET     /updatetoski						controllers.Application.getDownhillDistanceUpdated()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               		controllers.Assets.versioned(path="/public", file: Asset)
